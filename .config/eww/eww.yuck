(defwidget left []
  (box "Left")
)
(defwidget center []
  (box "Center")
)
(defwidget right []
  (box "Right")
)

(defwindow bar
  :monitor 0
  :geometry (geometry
    :x "0%"
    :y "0%"
    :width "100%"
    :height "30px"
    :anchor "top center"
  )
  :stacking "fg"
  :exclusive true
  (box
    :spacing 0
    :halign "fill"
    :space-evenly true
      (left)
      (center)
      (right)
  )
)
